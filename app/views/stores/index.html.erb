<h1 class="text-light retro-title text-center">Ces Magasins proposent des jeux correspondant à votre recherche : "<%= params[:query] %>"</h1>
<div class="d-flex flex-column">
  <%@stores.each do |store|%>
    <span class="tdn">
    <%= link_to store_path(store, query: params[:query]) do %>
      <div class="card-store">
        <%= cl_image_tag store.picture.key, class: "store-photo" %>
        <div class="card-store-infos">
          <h2><%=store.name%></h2>
          <p>Se trouve à <%= store.distance_to(@localisation).round %> km de vous</p>
        </div>
      </div>
      </span>
    <%end%>
  <%end %>
</div>
