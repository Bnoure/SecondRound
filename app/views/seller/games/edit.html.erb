<%= simple_form_for [:seller, @game] do |f|%>
<%= cl_image_tag @game.picture.key %>
  <%=f.input :title %>
  <%= f.input :description %>
  <%=f.input :category  %>
  <%=f.input :year   %>
  <%= f.input :condition, label:"Condition" %>
  <%= f.input :price, label:"Prix" %>
  <%=f.input :store_id, as: :select, collection: current_user.stores  %>
  <%= f.input :console, as: :select, collection: Console.all, selected: @game.console %>
<% end %>
