<div data-controller="game-photo" class="container d-flex flex-column justify-content-center align-items-center border rounded-4 mb-4 p-3 bg-dark-l mt-4 pt-5">
    <h1 class="text-white" data-game-photo-target="title">Ajouter un jeu</h1>
    <%= simple_form_for [:seller, @game] do |f| %>
      <div class="game-input" data-game-photo-target="form">
        <%= f.label :store_id, "Choisis ta boutique",
        class: "mb-3 fs-5"%>
        <%= f.input :store_id, as: :select,
                    collection: current_user.stores,
                    label: false,
                    input_html: {
                      class: "",
                    } %>
      </div>
      <div class="game-photo-input my-5" data-game-photo-target="button">
        <%= f.input :game_user_photo,
                    as: :file,
                    label: "Prendre une photo",
                    label_html: { class: "fs-2" },
                    input_html: {
                      id: "game_user_photo",
                      capture: "environment",
                      accept: "image/*",
                      class: "game-photo-button",
                      data: { action: "change->game-photo#displayPhoto" }
                    }
        %>
      </div>
      <img src="" alt="" class="picture-game d-none m-4 rounded-4 border" id="preview">
      <div class="button-photo d-flex justify-content-start">
        <div class="d-none"  data-action="click->game-photo#retake", data-game-photo-target="retake">
          <%= link_to "Reprendre une photo", class: "retake" %>
        </div>
        <%= f.submit "Ok", data: {game_photo_target: "submit"}, class: "d-none" %>
      </div>
    <% end %>
</div>
