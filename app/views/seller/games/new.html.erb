<div data-controller="game-photo" class="container d-flex flex-column justify-content-center align-items-center border rounded-4 mb-4 p-3 bg-dark-l mt-4 pt-5">
  <h1 class="text-white">Ajouter un jeu</h1>
  <%= simple_form_for [:seller, @game], html: {
    class: "form-new-game"
  } do |f| %>
    <div class="game-input">
      <%= f.label :store_id, "Choisis ta boutique",
      class: "mb-3 fs-5"%>
      <%= f.input :store_id, as: :select,
                  collection: current_user.stores,
                  label: false,
                  input_html: {
                    class: "form-select-new-game",
                  } %>
    </div>
    <div class="game-photo-input my-5">
      <%= f.input :game_user_photo,
                  as: :file,
                  label: "Prendre une photo",
                  label_html: { class: "fs-2" },
                  input_html: {
                    id: "game_user_photo",
                    capture: "environment",
                    accept: "image/*",
                    class: "game-photo-button",
                    data: { action: "change->game-photo#displayPhoto" }
                  }
      %>
    </div>
    <img src="" alt="" class="d-none" id="preview">
    <%= f.submit "Ajouter un jeu", data: {game_photo_target: "submit"}, class: "d-none" %>
  <% end %>
</div>
